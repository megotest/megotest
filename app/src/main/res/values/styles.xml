<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.Title">
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Title.Item">
        <item name="android:textSize">@dimen/movie_item_title_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Title.Year">
        <item name="android:textSize">@dimen/movie_year_text_size</item>
    </style>


    <style name="AppTheme.Default">
        <item name="android:textSize">@dimen/movie_default_text_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>


    <style name="AppTheme.Default.Genres">
        <item name="android:textSize">@dimen/movie_genres_text_size</item>
    </style>
</resources>
